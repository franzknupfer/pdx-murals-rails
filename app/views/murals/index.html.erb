<h1>Portland Murals</h1>

<!-- Add sort feature for year, region, alphabetic by mural name -->

<% @murals.each do |mural| %>
  <div id="mural_container">
    <%= link_to image_tag(mural.attached_image), mural_path(mural) %>
    <h3><%= link_to mural.mural_name, mural_path(mural) %></h3>
    <p><%= mural.region %></p>
    <p><%= mural.year_created %> </p>
    <p><%= mural.mural_address %> </p>
    <p><%= mural.artist_name %> </p>
    <p><%= mural.photo_credit %> </p>
  </div>


<% end %>
