<div id="show_mural_style">
  <h1><%= @mural.mural_name %>  (<%= @mural.year_created %>)</h1>
  <h2><%= @mural.mural_address %>, <%= @mural.region %> Portland </h2>
  <h2>Created by: <%= @mural.artist_name %></h2>

  <div id="show_image"><%= image_tag @mural.attached_image.url %></div>

  <h2>Location</h2>

  <div class="map_wrapper">
    <div id="map"></div>
  </div>

  <script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.getMap().setZoom(17);
    });
  </script>

  <p><%= link_to "Edit", edit_mural_path(@mural) %></p>
  <p><%= link_to "Delete", mural_path(@mural), :data => {:confirm => "Are you sure you want to delete this mural?", :method => "delete" } %></p>
</div>
